<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Cena01Controller">
   <top>
      <BorderPane prefHeight="750.0" prefWidth="650.0" BorderPane.alignment="CENTER">
         <top>
            <Button mnemonicParsing="false" onAction="#iniciar" text="Cima" BorderPane.alignment="TOP_CENTER">
               <BorderPane.margin>
                  <Insets top="125.0" />
               </BorderPane.margin>
            </Button>
         </top>
         <left>
            <Button mnemonicParsing="false" text="Esquerda" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="50.0" />
               </BorderPane.margin>
            </Button>
         </left>
         <right>
            <Button mnemonicParsing="false" text="Direita" BorderPane.alignment="CENTER_RIGHT">
               <BorderPane.margin>
                  <Insets right="50.0" />
               </BorderPane.margin>
            </Button>
         </right>
         <bottom>
            <Button mnemonicParsing="false" onAction="#mudarCena02" text="Baixo" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="50.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <center>
            <Circle fx:id="bolinha" fill="#ff1f1f" radius="40.0" stroke="BLACK" strokeType="INSIDE" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </top>
</BorderPane>
